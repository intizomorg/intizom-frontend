{
  "compilerOptions": {
    /* Language and environment */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* JavaScript support */
    "allowJs": true,
    "checkJs": false,

    /* Type checking */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Build */
    "noEmit": true,
    "incremental": true,

    /* Module resolution */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* JSX */
    "jsx": "react-jsx",

    /* Path alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Next.js plugin */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
